<div class="container">
  <h2>Novo Produto</h2>

  <% if @product_model.errors.any? %>
    <span>Verifique os campos abaixo:</span>
    <ul>
    <% @product_model.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>


  <%= form_with(model: ProductModel.new) do |f| %>
    <div>
      <%= f.label :name, 'Nome' %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :weight, 'Peso' %>
      <%= f.number_field :weight %>
    </div>
    <div>
      <%= f.label :height, 'Altura' %>
      <%= f.number_field :height %>
    </div>
    <div>
      <%= f.label :width, 'Largura' %>
      <%= f.number_field :width %>
    </div>
    <div>
      <%= f.label :length, 'Profundidade' %>
      <%= f.number_field :length %>
    </div>
    <div>
      <%= f.label :supplier_id, "Fornecedor" %>
      <%= f.collection_select(:supplier_id, Supplier.all, :id, :name) %>
    </div>
    <div>
      <%= f.label :category_id, "Categoria" %>
      <%= f.collection_select(:category_id, Category.all, :id, :name) %>
    </div>
    <%= f.submit 'Gravar' %>
  <% end %>
</div>
